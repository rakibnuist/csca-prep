generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String    @id @default(cuid())
  email      String    @unique
  name       String?
  whatsapp   String?
  major      String?
  targetYear Int       @default(2026)
  createdAt  DateTime  @default(now())
  password   String?
  role       String    @default("STUDENT")
  attempts   Attempt[]
}

model Test {
  id            String     @id @default(cuid())
  title         String
  subject       String
  duration      Int        @default(60)
  totalMarks    Int        @default(100)
  questionCount Int        @default(48)
  attempts      Attempt[]
  questions     Question[]
}

model Question {
  id          String   @id @default(cuid())
  testId      String
  content     String
  options     String[]
  correctIdx  Int
  marks       Int
  explanation String?
  difficulty  String
  topic       String?
  test        Test     @relation(fields: [testId], references: [id])
}

model Attempt {
  id          String   @id @default(cuid())
  userId      String
  testId      String
  score       Int
  answers     Json
  completedAt DateTime @default(now())
  timeTaken   Int      @default(0)
  test        Test     @relation(fields: [testId], references: [id])
  user        User     @relation(fields: [userId], references: [id])
  
  @@index([userId])
  @@index([userId, completedAt])
}

